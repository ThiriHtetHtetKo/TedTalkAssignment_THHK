<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="@dimen/margin_medium"

    >

    <ImageView
        android:id="@+id/btn_talk1"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:background="@drawable/susanemmett"
        android:gravity="left|bottom"
        android:paddingLeft="@dimen/margin_card_medium_2"
        android:paddingBottom="@dimen/margin_card_medium_2"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tv_watch_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Susan Emmett \nThis simple test can help kids hear better"
        android:textSize="15sp"
        android:textColor="@color/primary_text"
        android:paddingLeft="@dimen/margin_medium_3"/>


</LinearLayout>