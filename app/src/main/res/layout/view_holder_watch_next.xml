<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_medium"
    >

    <ImageView
        android:id="@+id/btn_talk1"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/susanemmett"
        android:paddingLeft="@dimen/margin_card_medium_2"
        android:paddingBottom="@dimen/margin_card_medium_2"
        android:scaleType="centerCrop"
        />

    <Button
        android:id="@+id/btn_time"
        android:layout_width="36dp"
        android:layout_height="21dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="75dp"
        android:background="@color/primary_text"
        android:text="5:24"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/tv_watch_next_speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Susan Emmett"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:paddingLeft="160dp"/>

    <TextView
        android:id="@+id/tv_watch_next_talk_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This simple test can help kids hear better"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:paddingLeft="160dp"
        android:layout_below="@id/tv_watch_next_speaker"
        android:textStyle="bold"
        android:paddingRight="@dimen/margin_xxlarge"
        />

    <ImageView
        android:id="@+id/v_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:layout_alignParentRight="true"
        />




</RelativeLayout>