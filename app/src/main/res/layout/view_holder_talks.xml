<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_small"
    >

    <ImageView
        android:id="@+id/iv_speaker_photo"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:src="@drawable/speaker_photo"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/margin_small"
        />

    <TextView
        android:id="@+id/tv_speaker_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anushka Naiknaware"
        android:textColor="@color/text_color"
        android:layout_marginTop="115dp"
        android:textSize="18sp"
        android:paddingLeft="@dimen/margin_medium_2"
        />

    <TextView
        android:id="@+id/tv_speak_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/talk1"
        android:textColor="@color/text_color"
        android:layout_below="@id/tv_speaker_name"
        android:textStyle="bold"
        android:paddingLeft="@dimen/margin_medium_2"
        />

    <ImageView
        android:id="@+id/v_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_white_24dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="360dp"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="06:58"
        android:layout_below="@id/v_menu"
        android:layout_marginLeft="350dp"
        android:textColor="@color/text_color"
        android:paddingRight="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium_3"
        />


</RelativeLayout>