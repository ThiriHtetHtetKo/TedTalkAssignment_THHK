<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_medium"

    >

    <ImageView
        android:id="@+id/iv_speaker_photo"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:src="@drawable/speaker_photo"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tv_speaker_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anushka Naiknaware"
        android:textColor="@color/text_color"
        android:layout_marginTop="@dimen/menu_button_margin_top"
        android:textSize="@dimen/text_regular_2x"
        android:paddingLeft="@dimen/margin_medium_2"
        />

    <TextView
        android:id="@+id/tv_speak_title"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="A teen scientist invention to help wounds heal."
        android:textColor="@color/text_color"
        android:layout_below="@id/tv_speaker_name"
        android:textStyle="bold"
        android:paddingLeft="@dimen/margin_medium_2"
        android:textSize="@dimen/text_regular_3x"

        />

    <ImageView
        android:id="@+id/v_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_white_24dp"
        android:layout_marginTop="@dimen/menu_button_margin_top"
        android:layout_alignRight="@id/tv_speaker_name"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/margin_medium_2"
        />

    <TextView
        android:id="@+id/tv_duation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="06:58"
        android:layout_below="@id/v_menu"
        android:textColor="@color/text_color"
        android:paddingRight="@dimen/margin_medium_2"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>