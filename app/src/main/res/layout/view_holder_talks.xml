<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="@dimen/margin_medium"
    >

    <Button
        android:id="@+id/btn_talk1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/talk1"
        android:gravity="left|bottom"
        android:text="@string/talk1"
        android:paddingLeft="@dimen/margin_card_medium_2"
        android:paddingBottom="@dimen/margin_card_medium_2"
        android:textAllCaps="false"
        android:textColor="@color/icons" />

    <Button
        android:id="@+id/btn_talk2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/talk2"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/talk2"
        android:paddingLeft="@dimen/margin_card_medium_2"
        android:paddingBottom="@dimen/margin_card_medium_2"
        android:gravity="left|bottom"
        android:textAllCaps="false"
        android:textColor="@color/icons"
        />

    <Button
        android:id="@+id/btn_talk3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@drawable/talk3"
        android:gravity="left|bottom"
        android:paddingBottom="@dimen/margin_card_medium_2"
        android:paddingLeft="@dimen/margin_card_medium_2"
        android:text="@string/talk3"
        android:textAllCaps="false"
        android:textColor="@color/icons"

        />

</LinearLayout>